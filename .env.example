# =========================
# Application
# =========================
APP_NAME=SD Proctor
APP_VERSION=0.1.0
DEBUG=true
APP_URL=http://localhost:8000

# =========================
# Database
# =========================
DATABASE_URL=postgresql+asyncpg://postgres@host.docker.internal:5432/sd_proctor

# =========================
# Redis
# =========================
REDIS_URL=redis://host.docker.internal:6379/0

# =========================
# Kafka
# =========================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ALERT_TOPIC=proctoring.alerts.v1
KAFKA_DLQ_TOPIC=proctoring.alerts.dlq
KAFKA_MAX_RETRIES=3

# =========================
# AI / Models
# =========================
AI_MODEL_DEVICE=cpu
AI_MODEL_BATCH_SIZE=8

FACE_MATCH_THRESHOLD=0.75
FACE_DETECTION_CONFIDENCE=0.5

FACE_DETECTION_MODEL=buffalo_sc
FACE_DETECTION_MODEL_PATH=~/.insightface

FACE_VERIFICATION_MODEL=buffalo_sc
FACE_VERIFICATION_MODEL_PATH=~/.insightface
EMBEDDING_DIM=512

# =========================
# Quality Checks
# =========================
MIN_FACE_SIZE=80
MIN_SHARPNESS=100.0
MIN_BRIGHTNESS=40
MAX_BRIGHTNESS=220
MAX_POSE_DEVIATION=20.0

# =========================
# Gaze Tracking
# =========================
GAZE_PITCH_RANGE=-15,25
GAZE_YAW_RANGE=-30,30
GAZE_OFF_SCREEN_DURATION=4.0

# =========================
# WebRTC
# =========================
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302
WEBRTC_TURN_SERVERS=
WEBRTC_FRAME_BUFFER_SIZE=150
WEBRTC_VERIFICATION_FREQUENCY=10
WEBRTC_ALERT_WEBSOCKET_PATH=/api/v1/session/ws

# =========================
# Alerts
# =========================
ALERT_GRPC_ENDPOINT=
ALERT_WEBHOOK_URL=
ALERT_RETRY_ATTEMPTS=5
ALERT_RETRY_BACKOFF=100,500,2000,5000,10000

# =========================
# Security (DO NOT COMMIT REAL VALUE)
# =========================
JWT_SECRET_KEY=dev-only-secret-change-me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =========================
# Monitoring
# =========================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENABLED=false
JAEGER_ENDPOINT=

# =========================
# Retention
# =========================
EMBEDDING_RETENTION_DAYS=90
FRAME_BUFFER_RETENTION_SECONDS=5
EVIDENCE_RETENTION_DAYS=30
